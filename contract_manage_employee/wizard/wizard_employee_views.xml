<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <!-- contract.report.intervent.wizard -->
       <record id="hr_employee_force_hour_wizard_view" model="ir.ui.view">
            <field name="name">Force hour cost wizard</field>
            <field name="model">hr.employee.force.hour.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Force employe hour cost wizard">
                   <field name="mode" invisible="1"/>

                   <field name="operation"/>
                   <field name="department_id" attrs="{'invisible':['|',('operation','!=','load'),('mode','=','file')]}"/>
                   <newline />
                   
                   <field name="from_date" attrs="{'required':[('operation','!=','load')], 'invisible':['|',('operation','=','load'),('mode','=','file')]}"/>
                   <field name="name" attrs="{'invisible':['|',('operation','=','load'),('mode','=','file')]}"/>
                   <newline />

                   <button string="Cancel" special="cancel" colspan="1"/>
                   <button name="load_button" type="object" string="Load current" icon="mail-forward" colspan="1" attrs="{'invisible':[('operation','!=','load')]}"/>
                   <button name="force_button" type="object" string="Force" icon="gtk-jump-to-ltr" colspan="1" attrs="{'invisible':[('operation','=','load')]}"/>
                </form>
            </field>
      </record>

      <record id="hr_employee_force_hour_wizard_action" model="ir.actions.act_window">
        <field name="name">Force hour cost</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.force.hour.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
      </record>

      <menuitem action="hr_employee_force_hour_wizard_action" 
                id="contract_report_intervent_wizard_root_menuitem" 
                sequence="10"
                parent="contract_report_force_root_menuitem"
                groups="analytic.group_analytic_accounting"
                icon="STOCK_EXECUTE" />
    </data>
</openerp>
